<Window x:Class="SfDataGrid_Sample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:syncfusion="http://schemas.syncfusion.com/wpf" 
        xmlns:local="clr-namespace:SfDataGrid_Sample"
        Title="MainWindow" Height="494.292" Width="953.197">

    <Window.DataContext>
        <local:ViewModel/>
    </Window.DataContext>
    
    
    <Grid>
        <syncfusion:SfDataGrid x:Name="dataGrid"  ShowGroupDropArea="True" ItemsSource="{Binding Orders}" AddNewRowPosition="Top">
        </syncfusion:SfDataGrid>
    </Grid>
    

</Window>